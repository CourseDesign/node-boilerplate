{
  "name": "template-neon",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "run": "node dist/index.js",
    "test": "jest",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "build": "neon build && gulp",
    "prepublish": "npm run build:production"
  },
  "lint-staged": {
    "src/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "dist/",
      "package"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
